<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/icon_horizontal_ruler" />

    <TextView
        android:id="@+id/tv_tambah_buku"
        style="@style/tv.interSemiBold.16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="Buku Baru"
        android:onClick="onTextViewClicked"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_tambah_pinjam"
        style="@style/tv.interSemiBold.16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="Peminjaman Buku"
        android:onClick="onTextViewClicked"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_tambah_kembali"
        style="@style/tv.interSemiBold.16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="Pengembalian Buku"
        android:onClick="onTextViewClicked"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_tambah_akun"
        style="@style/tv.interSemiBold.16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="Akun Baru"
        android:onClick="onTextViewClicked"
        android:textAlignment="center" />
</LinearLayout>