<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/outlined_bottom_grey">

    <TextView
        android:id="@+id/tv_judul_terakhir"
        style="@style/tv.interSemiBold.16"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Judul Buku"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/iv_gambar_terakhir"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_peminjam_terakhir"
        style="@style/tv.interRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Peminjam"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_judul_terakhir" />

    <TextView
        android:id="@+id/tv_tanggal_terakhir"
        style="@style/tv.interRegular.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="23/9"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_gambar_terakhir"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gambar_buku" />
</androidx.constraintlayout.widget.ConstraintLayout>