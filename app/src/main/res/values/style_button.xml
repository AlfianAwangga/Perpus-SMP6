<?xml version="1.0" encoding="utf-8"?>
<resources>
    //default
    <style name="btn" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="android:height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">16sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    //Color
    <style name="btn.Primary">
        <item name="android:backgroundTint">@drawable/selector_enabled_pressed_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="btn.White">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/grey1</item>
        <item name="strokeColor">@color/grey1</item>
        <item name="strokeWidth">1dip</item>
    </style>
    <style name="btn.Red">
        <item name="android:backgroundTint">@drawable/selector_enabled_pressed_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>