<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
    </style>

    //background
    <style name="input.FilledGrey">
        <item name="boxBackgroundColor">#F5F3F4</item>
    </style>

    //start icon
    <style name="input.FilledGrey.user">
        <item name="startIconDrawable">@drawable/icon_user</item>
        <item name="endIconMode">clear_text</item>
    </style>
    <style name="input.FilledGrey.password">
        <item name="startIconDrawable">@drawable/icon_locked</item>
        <item name="passwordToggleEnabled">true</item>
    </style>
    <style name="input.FilledGrey.email">
        <item name="startIconDrawable">@drawable/icon_email</item>
        <item name="endIconMode">clear_text</item>
    </style>
    <style name="input.FilledGrey.date">
        <item name="startIconDrawable">@drawable/icon_date</item>
        <item name="endIconMode">clear_text</item>
    </style>
    <style name="input.FilledGrey.phone">
        <item name="startIconDrawable">@drawable/icon_phone</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/icon_done</item>
        <item name="prefixText">+62</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">11</item>
    </style>

</resources>